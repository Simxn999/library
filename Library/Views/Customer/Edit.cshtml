@model Customer

<div class="col-lg-2" style="min-width: max-content">
    @using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
    {    
        <div class="row">
            <div class="col d-flex justify-content-start align-items-end">
                <a class="d-flex align-items-center gap-2 text-decoration-none" asp-action="Index" asp-route-id="@Model.CustomerID">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                      <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    Cancel
                </a>
            </div>
            <div class="col d-flex justify-content-center align-items-center"><h1>Customer</h1></div>
            <div class="col d-flex justify-content-end align-items-end text-primary">
                <label role="button" for="confirmEdit" class="d-flex justify-content-center align-items-center">
                    <input id="confirmEdit" type="submit" class="border-0 bg-transparent text-primary d-flex align-items-center gap-2 text-decoration-none" value="Save"/>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>   
                </label>  
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 fw-bold mb-0">Customer ID</p>
                    </div>
                    <div class="col text-end">
                        <p class="fs-5 mb-0">#@Model.CustomerID</p>
                        @Html.HiddenFor(m => m.CustomerID)
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Name</p>
                    </div>
                    <div class="col text-end">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class="text-end pe-1" } })
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Surname</p>
                    </div>
                    <div class="col text-end">
                        @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "text-end pe-1" } })
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Phone Number</p>
                    </div>
                    <div class="col text-end">
                        @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "text-end pe-1" } })
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Email</p>
                    </div>
                    <div class="col text-end">
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "text-end pe-1" } })
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Active Loans</p>
                    </div>
                    <div class="col text-end">
                        <p class="text-muted mb-0 pe-2">@Model.Loans.Count(l => l.State == LoanState.Active)</p>
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Expired Loans</p>
                    </div>
                    <div class="col text-end">
                        <p class="text-muted mb-0 pe-2">@Model.Loans.Count(l => l.State == LoanState.Expired)</p>
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col text-start">
                        <p class="fs-5 mb-0">Total Loans</p>
                    </div>
                    <div class="col text-end">
                        <p class="text-muted mb-0 pe-2">@Model.Loans.Count</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        @using (Html.BeginForm("Delete", "Customer", new { id = Model.CustomerID }, FormMethod.Post))
        {
            <div class="text-primary">
                <label role="button" for="confirmDelete" class="d-flex justify-content-center align-items-center">
                    <input id="confirmDelete" type="submit" class="border-0 bg-transparent text-primary d-flex align-items-center gap-2 text-decoration-none" value="Delete"/>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                    </svg>
                </label>
            </div>
        }
    </div>
</div>
@using Library.ViewModels
@model Book


<div class="col-lg-2" style="min-width: max-content"> 
    <div class="row">
        <div class="col d-flex justify-content-start align-items-end">
            <a class="d-flex align-items-center gap-2 text-decoration-none" asp-controller="Books" asp-action="List">
	            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
		            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
	            </svg>
	            <span style="min-width: max-content">Go Back</span>
            </a>
        </div>
        <div class="col d-flex justify-content-center align-items-center"><h1>@Model.Title by @Model.Author</h1></div>
        <div class="col d-flex justify-content-end align-items-end"></div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 fw-bold mb-0">Book ID</p>
                </div>
                <div class="col text-end">
                    <p class="fs-5 mb-0">#@Model.BookID</p>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Title</p>
                </div>
                <div class="col text-end">
                    <p class="text-muted mb-0 pe-2">@Model.Title</p>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Genre</p>
                </div>
                <div class="col text-end">
                    <p class="text-muted mb-0 pe-2">@Model.Genre</p>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Author</p>
                </div>
                <div class="col text-end">
                    <p class="text-muted mb-0 pe-2">@Model.Author</p>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Quantity</p>
                </div>
                <div class="col text-end">
                    <p class="text-muted mb-0 pe-2">@Model.Quantity</p>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Available</p>
                </div>
                <div class="col text-end">
                    <p class="text-muted mb-0 pe-2">@Model.Available</p>
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Active Loans</p>
                </div>
                <div class="col text-end">
                    @if (@Model.Loans.Any(l => l.State == LoanState.Active))
                    {
                        <a class="text-decoration-none pe-2" asp-action="Loans" asp-route-id="@Model.BookID" asp-route-state="@LoanState.Active">
                            @Model.Loans.Count(l => l.State == LoanState.Active)
                        </a>
                    }
                    else
                    {
                        <p class="text-muted mb-0 pe-2">@Model.Loans.Count(l => l.State == LoanState.Active)</p>
                    }
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Expired Loans</p>
                </div>
                <div class="col text-end">
                    @if (@Model.Loans.Any(l => l.State == LoanState.Expired))
                    {
                        <a class="text-decoration-none pe-2" asp-action="Loans" asp-route-id="@Model.BookID" asp-route-state="@LoanState.Expired">
                            @Model.Loans.Count(l => l.State == LoanState.Expired)
                        </a>
                    }
                    else
                    {
                        <p class="text-muted mb-0 pe-2">@Model.Loans.Count(l => l.State == LoanState.Expired)</p>
                    }
                </div>
            </div>
            <hr>
            <div class="row align-items-center">
                <div class="col text-start">
                    <p class="fs-5 mb-0">Total Loans</p>
                </div>
                <div class="col text-end">
                    @if (@Model.Loans.Any())
                    {
                        <a class="text-decoration-none pe-2" asp-action="Loans" asp-route-id="@Model.BookID">
                            @Model.Loans.Count
                        </a>
                    }
                    else
                    {
                        <p class="text-muted mb-0 pe-2">@Model.Loans.Count</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>